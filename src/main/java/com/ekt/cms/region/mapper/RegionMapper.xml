<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ekt.cms.region.dao.RegionMapper">

	<resultMap id="RegionMap" type="com.ekt.cms.region.entity.Region">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="region_name" property="regionName" jdbcType="VARCHAR" />
		<result column="parent_id" property="parentId" jdbcType="INTEGER" />
		<result column="level" property="level" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
		id, region_name, parent_id, level
	</sql>

	<select id="selectByPrimaryKey" resultMap="RegionMap"
		parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from csm_region
		where id = #{id,jdbcType=INTEGER}
	</select>

	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from csm_region
		where id = #{id,jdbcType=INTEGER}
	</delete>

	<insert id="insert" parameterType="com.ekt.cms.region.entity.Region">
		<selectKey resultType="java.lang.Integer" keyProperty="id"
			order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into csm_region (id, region_name, parent_id,
		level)
		values (#{id,jdbcType=INTEGER}, #{regionName,jdbcType=VARCHAR},
		#{parentId,jdbcType=INTEGER},
		#{level,jdbcType=VARCHAR})
	</insert>
	
	
	<update id="updateByPrimaryKey" parameterType="com.ekt.cms.region.entity.Region">
		update csm_region
		set region_name = #{regionName,jdbcType=VARCHAR},
		parent_id = #{parentId,jdbcType=INTEGER},
		level = #{level,jdbcType=VARCHAR}
		where id = #{id,jdbcType=INTEGER}
	</update>
	
	<select id="queryByCondition" resultMap="RegionMap"
		parameterType="com.ekt.cms.region.entity.Region">
		select * from csm_region where id > 1
		<if test="region.regionName != null and region.regionName !='' ">
			and (region_name like '%${region.regionName}%')
		</if>
		<if test="region.parentId != null and region.parentId !=''">
			and parent_id=#{ region.parentId }
		</if>
		<if test="region.level != null and region.level !=''">
			and level=#{ region.level }
		</if>
	</select>
	
	<select id="listPage" resultMap="RegionMap"
		parameterType="com.ekt.cms.region.entity.Region">
		select * from csm_region where id > 1
		<if test="region.regionName != null and region.regionName !='' ">
			and (region_name like '%${region.regionName}%')
		</if>
		<if test="region.parentId != null and region.parentId !=''">
			and parent_id=#{ region.parent_id }
		</if>
		<if test="region.level != null and region.level !=''">
			and level=#{ region.level }
		</if>
	</select>
	
</mapper>