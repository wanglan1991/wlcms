<script>
	//消息窗体方法
	function msg(title,text){
		$('#msghandler').hide();
		var title;
		switch(title){
			case 0 :
				title = '<i class="fa fa-warning"></i>&nbsp;错误'
				setTimeout("$('#msgmodal').modal('hide')",3000);
				break;
			case 1 :
				title = '<i class="fa fa-check-square"></i>&nbsp;成功'
				setTimeout("$('#msgmodal').modal('hide')",3000);
				break;
			case 2 :
				title = '<i class="fa fa-mail-forward"></i>&nbsp;转入支付系统'
				$('#msghandler').show();
				break;
			case 3 :
				title = '<i class="fa fa-check-square"></i>&nbsp;提示'
				setTimeout("$('#msgmodal').modal('hide')",3000);
				break;
			default :
				title = '<i class="fa fa-question-circle"></i>&nbsp;未知'
				break;
		};
		
		$('#msgtitle').html(title);
		$('#msgtext').text(text);
		$('#msgmodal').modal();
		
	};
	
	//确定取消消息窗口
	function c_msg(title,text){
		$('#msgconfirmtitle').text(title);
		$('#msgconfirmtext').text(text);
		$('#confirm_delete').modal('show');
	};
	
	//判断是否为空
	function isNull(str){
		var re=/^[　\s]*$/;
		return re.test(str);
	}
</script>